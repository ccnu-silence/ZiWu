<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dimen_dp_5"
    android:layout_marginTop="@dimen/dimen_dp_5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_search_history_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_dp_30"
        android:layout_marginLeft="@dimen/dimen_dp_20"
        android:gravity="center_vertical"
        android:text="@string/search_history"
        android:textColor="@color/blackColor"
        android:textSize="@dimen/text_size_sp_16" />

    <ListView
        android:id="@+id/lv_search_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null" />
</LinearLayout>