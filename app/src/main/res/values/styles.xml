<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="add_plan_popup_window">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">#ECF0F1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#AF7AC5</item>
    </style>

    <style name="add_plan_detail_item_left_text_view">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="add_plan_detail_item_right_edit_text">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="plan_detail_item_left_text_view">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="plan_detail_item_right_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="adapter_item_plan_summary_left_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/plan_list_name_color</item>
    </style>

    <style name="adapter_item_plan_summary_right_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/greenColor</item>
    </style>

    <style name="popup_window_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="popup_window_content_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#D5DBDB</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

     <style name="long_click_option_dialog_content_text_view">
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:textSize">18sp</item>
         <item name="android:textColor">#000000</item>
         <item name="android:layout_gravity">center</item>
         <item name="android:layout_marginLeft">@dimen/dimen_dp_15</item>
         <item name="android:layout_marginTop">@dimen/dimen_dp_15</item>
         <item name="android:layout_marginRight">@dimen/dimen_dp_15</item>
         <item name="android:layout_marginBottom">@dimen/dimen_dp_15</item>
     </style>
    <style name="rce_vertical_light_thin_divider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.5dp</item>
        <item name="android:background">@color/color_divider_line</item>
    </style>

    <declare-styleable name="AddImageButton">
        <attr name="AddButtonBackground" format="reference" />
        <attr name="AddButtonImageSrc" format="reference" />
    </declare-styleable>

    <declare-styleable name="TabIndicatorItemView">
        <attr name="IndicatorButton" format="reference" />
        <attr name="IndicatorText" format="reference" />
    </declare-styleable>
</resources>
